@{
    ViewBag.Title = "Currencies";
    //Layout = "~/Views/Setup/Shared/_setupLayout.cshtml";
    Layout = null;

}

<div class="has-main-container" ng-controller="currencyController">

    <div class="has-toolbar" ng-show="listview && !isprocessing && !edititem">
        @* generate toolbar dinamycally *@
        <button class="button" ng-click="addvalue()">
            <img src="~/CDN/Content/Images/Toolbar/save_16.png" alt="save" /> Add Value
        </button>
        <button class="button" ng-click="saveitem()">
            <img src="~/CDN/Content/Images/Toolbar/save_16.png" alt="save" /> Save Item
        </button>
    </div>

    <div class="has-loading" ng-show="isprocessing"><img src="~/CDN/Content/Images/ajax-loader.gif" alt="loading" /> Loading</div>

    @*Basic Code Types List Section*@
    <div class="has-container" ng-cloak ng-show="screenmanager.listview && !screenmanager.isprocessing">

        <h2>@ViewBag.Title</h2>

        <div class="has-section-2">
            <label form="searchfilterslist.CurrencyName">Currency Name</label>
            <input type="text" name="searchfilterslist.CurrencyName" id="searchfilterslist.CurrencyName" ng-model="searchfilterslist.CurrencyName" />
        </div>

        <div class="has-section-2">

            <table class="table table-striped table-condensed table-hover has-list">
                <tr>
                    <th>ID</th>
                    <th>Code</th>
                    <th>Name</th>
                    <th>Symbol</th>
                    <th>Exchange Rate From Default</th>
                </tr>
                <tbody>
                    <tr ng-repeat="c in screenmanager.list" class="has-list-row" ng-click="screenmanager.showdetail(c)">
                        <td>{{c.ID}}</td>
                        <td>{{c.CurrencyCode}} <span ng-show="c.HasChanges==2">*</span></td>
                        <td>{{c.CurrencyName}}</td>
                        <td>{{c.CurrencySymbol}}</td>
                        <td>{{c.ExchangeRateFromDefault}}</td>
                    </tr>
                </tbody>
            </table>

        </div>

    </div>
    
    <div class="has-container" ng-cloak ng-show="screenmanager.editview && !screenmanager.isprocessing">

        <div class="has-section-2">
            <fieldset>
                <label for="">Code</label>
                <input type="text" id="CurrencyCode" name="CurrencyCode" ng-model="screenmanager.edititemcopy.CurrencyCode" />
            </fieldset>
            <fieldset>
                <label for="">Currency Name</label>
                <input type="text" id="CurrencyName" name="CurrencyName" ng-model="screenmanager.edititemcopy.CurrencyName" />
            </fieldset>
            <fieldset>
                <label for="">Currency Symbol</label>
                <input type="text" id="CurrencySymbol" name="CurrencySymbol" ng-model="screenmanager.edititemcopy.CurrencySymbol" />
            </fieldset>
            <fieldset>
                <label for="">Exchange Rate From Default</label>
                <input type="text" id="ExchangeRateFromDefault" name="ExchangeRateFromDefault" ng-model="screenmanager.edititemcopy.ExchangeRateFromDefault" />
            </fieldset>
        </div>

        <div class="panel-footer">
            <ul class="list-inline">
                <li><a class="btn-link" ng-click="screenmanager.apply()">Apply</a></li>
                <li><a class="btn-link" ng-click="screenmanager.canceledit()">Cancel</a></li>
            </ul>
        </div>

    </div>

</div>